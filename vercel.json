{
  "builds": [  
    { "src": "apps/bank-api/package.json",         "use": "@vercel/next" },
    { "src": "apps/user-app/package.json",         "use": "@vercel/next" },
    { "src": "apps/bank_webhook_handler/index.js", "use": "@vercel/node" }
  ],

  "routes": [
    { "src": "/bank-api/(.*)", "dest": "apps/bank-api/$1" },
    { "src": "/user-app/(.*)", "dest": "apps/user-app/$1" },
    { "src": "/bank-webhook",  "dest": "apps/bank_webhook_handler/index.js" }
  ]
}
